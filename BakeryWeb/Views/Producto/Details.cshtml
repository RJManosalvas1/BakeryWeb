@model BakeryWeb.Models.Producto

@{
    ViewData["Title"] = "Detalles del Producto";
}

<h2>Detalles del Producto</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Precio</dt>
        <dd class="col-sm-10">@Model.Precio.ToString("C")</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.ProductoId" class="btn btn-warning">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
