@model BakeryWeb.Models.Producto

@{
    ViewData["Title"] = "Detalles del Producto";
}

<div class="container py-4">
    <h2 class="text-center mb-4">Detalles del Producto</h2>

    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <img src="@Model.ImagenUrl" alt="@Model.Nombre" class="img-fluid rounded shadow mb-3" style="max-height: 300px;" />
            <h3>@Model.Nombre</h3>
            <h4 class="text-muted">$@Model.Precio</h4>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </div>
</div>
