@model List<BakeryWeb.Models.CarritoItems>

@{
    ViewData["Title"] = "Carrito de Compras";
}

<h2>Carrito de Compras</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio Unitario</th>
                <th>Total</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Producto?.Nombre</td>
                    <td>@item.Cantidad</td>
                    <td>@item.Producto?.Precio.ToString("C")</td>
                    <td>@((item.Cantidad * (item.Producto?.Precio ?? 0)).ToString("C"))</td>
                    <td>
                        <form asp-controller="Carrito" asp-action="EliminarDelCarrito" method="post" class="d-inline">
                            <input type="hidden" name="carritoItemId" value="@item.CarritoItemsId" />
                            <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end mt-3">
        <h4>Total del Carrito: @Model.Sum(item => item.Cantidad * (item.Producto?.Precio ?? 0)).ToString("C")</h4>
    </div>

    <div class="mt-3">
        <a asp-controller="Producto" asp-action="Index" class="btn btn-primary">Seguir Comprando</a>
    </div>
}
else
{
    <div class="alert alert-info">
        No hay productos en el carrito.
    </div>
    <a asp-controller="Producto" asp-action="Index" class="btn btn-primary">Ir a Productos</a>
}
